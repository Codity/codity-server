@font-face
  font-family Lato
  font-style normal
  src url(../fonts/LatoLight.ttf)

@font-face
  font-family Lato-Regular
  font-style normal
  src url(../fonts/LatoRegular.ttf)

body
  background #eee
  margin 0
  padding 0
  font-family 'Lato'

div
span
  font-family 'Lato'

button
  background none
  padding 0
  border none

input
  font-family 'Lato'
  border none
  &:focus
    outline none

a
  text-decoration none

.clear
  clear both


.drawer
  &__link
    font-family 'Lato-Regular'

.rules
  &__list
    width 670px
    margin 0 auto
    padding 0 50px

  &__header
    margin 16px 20px
    font-family 'Lato-Regular'
    color rgb(85, 85, 85)


  &__item
    padding 22px 20px
    font-size 18px

    &__wrapper
      position relative
      height 78px
      border-bottom 1px solid rgb(224, 224, 224)

      &_blank
        color #fff
        background #B2DFDB
        border-bottom none
        &__block
          font-family Lato-Regular
        &:hover
          background #B2DFDB

    &__block
      position relative
      &_select
        padding 2px 6px
        background #eee

  &__cross
    position absolute
    right 0
    top 0
    font-size 18px
    cursor pointer
    padding 30px
    color #666

  &__plus
    position absolute
    right 16px
    bottom 40px

  &__save
    cursor pointer
    position absolute
    top 0
    right 0
    font-size 37px
    padding 21px
    border-bottom-right-radius 2px
    color #fff
    background #4db6ac



.select
  font-family 'Lato'
  cursor pointer

  &_invalid
    background red
  &_blank
    background blue
  &_invalid&_blank
    background green

  &__list
    position absolute
    top 0
    left 0
    list-style-type none
    margin 0
    padding 2px 6px
    cursor pointer
    background grey


.input
  font-family 'Lato'
  width 200px
  background #eee
  padding 5px
  font-size 20px

  &_invalid
    border-bottom 2px solid red
  &_blank
    background blue
  &_invalid&_blank
    background green

